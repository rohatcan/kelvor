{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "coverage",
    "*.config.js",
    "*.config.ts",
    "src/**/*.test.ts"
  ],
  "rules": {
    "no-console": "off",
    "no-debugger": "error",
    "no-unused-vars": "warn",
    "prefer-const": "warn",
    "no-var": "error"
  }
}